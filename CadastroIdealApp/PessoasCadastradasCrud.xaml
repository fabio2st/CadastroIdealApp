            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="pessoasCadastradasListBox" Grid.Column="0" Grid.Row="1">
            <!--<ListBoxItem>Mike</ListBoxItem>
            <ListBoxItem>Lisa</ListBoxItem>
            <ListBoxItem>John</ListBoxItem>
            <ListBoxItem>Mary</ListBoxItem>-->
        </ListBox>
        <Button 
            Grid.Column="0" 
            Grid.Row="2" 
            Margin="0,10,0,0" 
            Width="125" 
            Height="25" 
            HorizontalAlignment="Right"
            Click="ButtonClick">
            Editar
        </Button>
    </Grid>
